{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["*"]
    },
    "allowJs": true,
    "declaration": true,
    "jsx": "react-native",
    "module": "commonjs",
    "target": "es2018",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["react", "react-native"],
    "sourceMap": true,
    "lib": ["dom", "es5", "es6", "es2015", "es2016", "es2017", "es2018", "esnext"],
  },
  "include": ["./packages/**/**/*"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "jest.config.js",
    "jest.setup.js",
    "commitlint.config.js"
  ]
}
